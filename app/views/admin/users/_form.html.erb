<p>
  <label for="email">Email<span class="required"> *</span></label>
  <%= f.text_field :email %>
  <em></em>
</p>

<p>
  <label for="password">Пароль<span class="required"> *</span></label>
  <%= f.password_field :password, :autocomplete => "off" %>
  <em></em>
</p>

<p>
  <label for="password_confirmation">
    Подтвердить Пароль<span class="required"> *</span>
  </label>
  <%= f.password_field :password_confirmation, :autocomplete => "off" %>
  <em></em>
</p>

<p>
  <label for="parent_id">Привязка<span class="required"> *</span></label>
  <%= f.text_field :parent_id %><br />
  <em>Указать номер связи с пользователем или начать ввод почтового адреса</em>
</p>

<p>
  <label for="full_name">И.Ф.О<span class="required"> *</span></label>
  <%= f.text_field :full_name %>
  <em></em>
</p>

<p>
  <label for="active">Активность<span class="required"> *</span></label>
  <%= f.check_box :active %>
  <em></em>
</p>

<p>
  <label for="admin">Администратор<span class="required"> *</span></label>
  <%= f.check_box :admin %>
  <em></em>
</p>

<script>
  $("input#user_parent_id").autocomplete({
    source: function(request, response){
      $.ajax({
        type: 'GET',
        data: {user_email:$('#user_parent_id').val()},
        url: '/admin/users/load_users',
        success: function(data){
          response(data);
        },
        dataType: "json"
      });
    }
  });
</script>