<% content_for :title_page do %>
  <h2>Редактирование  тарифа <%= @tariff.title %></h2>
<% end %>

<% content_for :flash_message do %>
  <%= render :partial => "common/flash_messages", :locals => {:object => @tariff} %>
<% end %>

<%= form_for @tariff, :url => {:action => :update}, :html => {:class => 'tabular'} do |f| %>
  <div class="box">
    <%= render :partial => 'form', :locals => {:f =>f} %>
    <%= f.submit 'Обновить' %>&nbsp;|
    <%= link_to "Назад", admin_tariffs_path %>
  </div>
<% end %>

