<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email, "Почтовый адрес" %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password, "Пароль" %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Подтверждение пароля" %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :parent_id, "Номер реферера" %><br />
  <%= f.text_field :parent_id %></p>

  <p><%= f.submit "Зарегистрироваться" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>

